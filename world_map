      {
        "op": "sum",
        "field": "suicides_no",
        "as": "tsuicide"
      }],
      "groupby": ["year", "age"]
    },
    {
      "calculate": "(datum.tsuicide/datum.tpopulation)*100000",
      "as": "suicides"
    },
      
