{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Suicides according to sex" },
  "background" : "#f2f9ff",
  "height" : 315,
  "width": 190,
  "params": [
      {
          "name": "Year_selection",
          "value":1985,
          "bind":{
              "input": "range",
              "min": 1985,
              "max": 2015,
              "step": 1,
              "name": "Year: "
          }
      }
  ],
  "data": {
  "url": "https://raw.githubusercontent.com/ds-san/FIT3179-Assignment2/main/data/gender.csv"
  },
  "transform": [
      {"filter":"datum.year == Year_selection"}
  ],
  "selection": {
    "sex_highlight": {
    "type": "multi",
    "fields": ["sex"],
    "bind": "legend"
    }
  },
  "mark": {
    "type":"arc",
    "tooltip":true
  },
  "encoding": {
    "theta": {"aggregate":"sum","field": "cases", "type": "quantitative"},
    "opacity": {
      "condition": {"selection": "sex_highlight", "value": 1.0},
      "value": 0.4
      },
    "color": {"field": "sex", 
    "type": "nominal",
    "scale": {
      "range": [
        "#93003a",
        "#2b2c54"
      ]
    }
  }
  }
}
