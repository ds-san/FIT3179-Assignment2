{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "Suicides in countries" },
  "params": [
      {
          "name": "Year_selection",
          "value":2000,
          "bind":{
              "input": "range",
              "min": 1985,
              "max": 2015,
              "step": 1,
              "name": "Year: "
          }
      }
  ],
  "data": {
  "url": "https://raw.githubusercontent.com/ds-san/FIT3179-Assignment2/main/data/gender.csv"
  },
  "transform": [
      {"filter":"datum.year == Year_selection"}
  ],
  "mark": "arc",
  "encoding": {
    "theta": {"aggregate":"sum","field": "cases", "type": "quantitative"},
    "color": {"field": "sex", "type": "nominal"}
  }
}
